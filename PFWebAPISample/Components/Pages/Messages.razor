@page "/messages"

<div class="container">
    <div class="sidebar">
        <div class="search">
            <input type="text" placeholder="Search Message" />
        </div>
        <div class="online-now">
            <p>Online Now</p>
            <div class="avatars">
                    <img src="img/stella.jpg" class="avatar"/>
                    <img src="img/oliver.jpg" class="avatar"/>
                    <img src="img/joshua.jpg" class="avatar" />
                    <img src="img/mary.jpg" class="avatar" />
                    <img src="img/rose.jpg" class="avatar" />
            </div>
        </div>
		<div class="all-messages">
			
            <p>All Messages</p>
            <div class="message-item active">
                <img src="img/stella.jpg" class="avatar" />
                <div>
                    <p>Stella Evergreen</p>
                    <small>I hope this message finds you...</small>
                </div>
            </div>
            <div class="message-item">
                <img src="img/oliver.jpg" class="avatar" />
                <div>
                    <p>Oliver Crestwood</p>
                    <small>Wishing you a fantastic day...</small>
                </div>
            </div>
        </div>
    </div>

    <div class="chat">
        <div class="chat-header">
            <img src="img/stella.jpg" class="avatar" />
            <div>
                <p>Stella Evergreen</p>
                <small>stellaevergreen@gmail.com</small>
            </div>
        </div>

        <div class="chat-body">
            <div class="message from-them">
                Hi Stella! Have you seen the email I sent you?
            </div>
            <div class="message from-me">
                Yes, I am actually working on it right now. My apologies for not keeping you updated
            </div>
            <div class="message from-them">
                No worries, just want to check on you. Take your time!
            </div>
        </div>

        <div class="chat-footer">
            <input type="text" placeholder="Type your message" />
            <button>Send Message</button>
        </div>
    </div>

    <div class="profile">
        <img src="img/stella.jpg" class="avatar-large" />
        <h3>Stella Evergreen</h3>
        <p>stellaevergreen@gmail.com</p>
        <button class="primary-btn">View Profile</button>

        <div class="about">
            <h4>About</h4>
            <p>Creative alchemist merging form and function...</p>
        </div>

        <div class="personal-info">
            <h4>Personal Information</h4>
            <p><b>Nickname:</b> Kuku</p>
            <p><b>Phone:</b> 001 123 1234567</p>
            <p><b>DOB:</b> March 12, 1997</p>
            <p><b>Gender:</b> Female</p>
            <p><b>Language:</b> English</p>
        </div>
    </div>
</div>

